{
    "name": "bible_display",
    "title": "圣经显示",
    "type": "object",
    "properties": {
        "language": {
            "title": "圣经语言",
            "type": "string",
            "enum": ["中文", "English", "对照"],
            "default": "中文"
        },
        "chinese": {
            "title": "中文圣经版本",
            "type": "string",
            "enum": ["简体", "繁體"],
            "default": "简体"
        },
        "english": {
            "title": "英文圣经版本",
            "type": "string",
            "enum": ["KJV", "ASV", "WEB"],
            "default": "ASV"
        },
        "zoom": {
            "title": "字体大小(%)",
            "type": "integer",
            "default": 100
        },
        "range_location": {
            "title": "经节范围注释位置",
            "type": "string",
            "enum": ["开头", "结尾"],
            "default": "开头"
        },
        "display_type": {
            "title": "投影显示方式",
            "type": "string",
            "enum": ["仅选中", "上下文"],
            "default": "仅选中"
        },
        "menu_to_projector": {
            "title": "从圣经目录直接投影",
            "type": "boolean",
            "default": false
        }
    }
}
